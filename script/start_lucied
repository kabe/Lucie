ENV[ 'RAILS_ENV' ] = 'lucied'


require File.join( File.dirname( __FILE__ ), '..', 'config', 'environment' )
require 'etc'


if ARGV[ 0 ] == 'verbose'
  Lucie::Log.verbose = true
end

unless Etc.getpwuid( Process.uid ).name == 'root'
  Lucie::Log.error 'You must be root.'
  exit -1
end


LucieDaemon.daemonize


