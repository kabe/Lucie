load "#{ File.dirname( __FILE__ ) }/lib/lucie/version.rb"


def add
  load File.dirname(__FILE__) + "/script/add_installer"
end


def builder
  load File.dirname(__FILE__) + "/script/builder"
end


def version
  puts <<-EOL
Lucie, version #{ Lucie::VERSION::STRING }
Copyright (C) 2007 Yasuhito TAKAMIYA
  EOL
end


def help
  command = ARGV.shift
  
  ARGV.clear << '--help'
  if command.nil?
    puts <<-EOL
Usage: installer <command> [options] [args]

Lucie installer command-line tool, version #{ Lucie::VERSION::STRING }
Type 'installer help <command>' for help on a specific command.
Type 'installer --version' to see the version number.

Available commands:
  add        - adds a installer
  build      - builds a installer

Lucie is a Automatic Cluster Installer.
For additional information, see http://lucie.is.titech.ac.jp/trac/lucie/
    EOL
  elsif method_for_command( command )
    self.send( method_for_command( command ) )
  else
    STDERR.puts "Type 'installer help' for usage."
    exit -1
  end
end


def method_for_command command
  case command
  when 'add'
    return :add
  when 'build', 'builder'
    return :builder
  when 'version', '-v', '--version'
    return :version
  when 'help', '-h', '--help', '/?', '-?'
    return :help
  else 
    return nil
  end
end


command = ARGV.shift
if method_for_command( command )
  self.send method_for_command( command )
elsif command.nil?
  STDERR.puts "Type 'installer --help' for usage."
  exit -1
else
  STDERR.puts "Unknown command : '#{command}'"
  STDERR.puts "Type 'installer --help' for usage."
  exit -1
end


### Local variables:
### mode: Ruby
### coding: utf-8
### indent-tabs-mode: nil
### End:
