require File.dirname( __FILE__ ) + '/../config/boot'

require 'etc'
require 'lucie_daemon'
require 'lucied_blocker'


unless Etc.getpwuid( Process.uid ).name == 'root'
  STDERR.puts 'ERROR: You must be root.'
  exit -1
end


begin
  unless LuciedBlocker.blocked?
    puts 'Lucie daemon not running (no pid file).'
    exit 0
  end

  LucieDaemon.kill
  sleep 1
rescue => e
  STDERR.puts "FAILED: #{ e.message }"
  exit -1
end


puts 'Lucie daemon stopped.'
exit 0


